{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "03 - ng serve",
			"type": "shell",
			"options": {
				"cwd": "ng"
			},
			"command": "ng serve",
			"group": "build"
		},
		{
			"label": "03 - ng build",
			"type": "shell",
			"options": {
				"cwd": "ng"
			},
			"command": "ng build",
			"group": "build"
		},
		{
			"label": "02 - go run",
			"type": "shell",
			"options": {
				"cwd": "."
			},
			"command": "go",
			"args": [
				"run",
				"main.go"
			],
			"group": "build"
		},
		{
			"label": "01 - gongc",
			"type": "shell",
			"options": {
				"cwd": "go/models"
			},
			"command": "gongc",
			"args": [],
			"group": "build"
		},
		{
			"label": "01 - gongc & run",
			"type": "shell",
			"options": {
				"cwd": "go/models"
			},
			"command": "gongc",
			"args": [
				"-run"
			],
			"group": "build"
		},
		{
			"label": "01 - gcloud run deploy",
			"type": "shell",
			"options": {
				"cwd": "."
			},
			"command": "gcloud",
			"args": [
				"run",
				"deploy",
				"--max-instances=1",
				"--cpu=1",
				"--memory=512Mi",
			],
			"group": "build"
		},
	]
}